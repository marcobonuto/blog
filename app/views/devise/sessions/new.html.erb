<div id="page_wrapper" class="login-form">
	<%= image_tag "ruby-on-rails.png" %>
	<!--<h2>Log in</h2>-->

	<%# form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="container-input">
			<label for="" class="label">Email</label>
			<br>
	  	<%= f.email_field :email, label: false, autofocus: true %>
	  </div>
	  <br>
	  <div class="container-input">
			<label for="" class="label">Senha</label>
			<br>
	  	<%= f.password_field :password, label: false, autocomplete: "off" %>
	  </div>
	  <br>
	  <% if devise_mapping.rememberable? -%>
	  	<div class="container-input">
	    	<%= f.check_box :remember_me, label: false, class: 'check_box' %> 
	    	<label for="" class="label">Lembrar-me</label>
	    </div>
	  <% end -%>
	  <br>
	  <div><%= f.submit "Log in" %></div>
	<% end %>
		<br>
	<%= render "devise/shared/links" %>
</div>