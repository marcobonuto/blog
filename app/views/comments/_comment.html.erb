<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= comment.name %></strong></p>
		<p class="comment_body"><%= comment.body %></p>
		<p class="comment_time"><span class="days"><%= time_ago_in_words(comment.created_at) %> atraz</span></p>
	</div>
	<% if user_signed_in? %>
		<p><%= link_to 'Deletar', [comment.post, comment], method: :delete, class: "button", data: { confirm: "Voce tem certeza?" } %></p>
	<% end %>
</div>